<?xml version="1.0" encoding="utf-8"?>  
<PreferenceScreen  
	xmlns:android="http://schemas.android.com/apk/res/android">  
	
	<PreferenceCategory android:title="更新设置">  
		<CheckBoxPreference  
			android:key="autoUpdate"  
			android:title="自动更新"  
			android:summaryOn="开启"  
			android:summaryOff="关闭"  
			android:defaultValue="true"  
		/>  
		<ListPreference  
			android:key="updateInterval"  
			android:title="更新频率"  
			android:summary=""  
			android:dialogTitle="更新频率"  
			android:entries="@array/update_interval"  
			android:entryValues="@array/update_interval_values"  
			/>  
	    <com.novel.subscription.TimePreference
	        android:key="timePickerUpdateStart"
	        android:title="更新开始时间点"
	        android:dialogMessage="请指定更新开始的时间点：" 
	        android:dialogTitle="请指定更新开始的时间点：" 
  	        android:defaultValue=""
	        android:summary=""
	        android:positiveButtonText="确定" 
	        android:negativeButtonText="取消" 
	        />
	    <com.novel.subscription.TimePreference
	        android:key="timePickerUpdateEnd"
	        android:title="更新结束时间点"
	        android:dialogMessage="请指定更新结束的时间点：" 
	        android:dialogTitle="请指定更新结束的时间点：" 
	        android:defaultValue=""
	        android:summary=""
	        android:positiveButtonText="确定" 
	        android:negativeButtonText="取消" 
	        
	        />
	 </PreferenceCategory>
	  
	<PreferenceCategory android:title="提醒设置">  
		<CheckBoxPreference  
			android:key="updateNotify"  
			android:title="有更新时是否通知"  
			android:summaryOn="开启"  
			android:summaryOff="关闭"  
			android:defaultValue="true"  
		/>  
		<CheckBoxPreference  
			android:key="notifySound"  
			android:title="声音通知"  
			android:summaryOn="开启"  
			android:summaryOff="关闭"  
			android:defaultValue="true"  
		/> 
		<CheckBoxPreference  
			android:key="notifyVibrate"  
			android:title="振动通知"  
			android:summaryOn="开启"  
			android:summaryOff="关闭"  
			android:defaultValue="true"  
		/> 
		
