	    <CheckBoxPreference  
			android:key="autoDownloadInWifi"  
			android:title="有更新时自动下载（仅在wifi下有效）"  
			android:summaryOn="开启"  
			android:summaryOff="关闭"  
			android:defaultValue="true"  
